{
    "extends": "airbnb",
    "plugins": [
        "mocha"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-tabs": 0,
        "indent": ["off", "tab"],
        "comma-dangle": "off",
        "no-use-before-define": "off",
        "prefer-destructuring": "off",
        "no-else-return": "off",
        "no-plusplus": "off",
        "no-mixed-operators": "off",
        "guard-for-in": "off",
        "no-restricted-syntax": "off",
        "no-var": "off"
    }
}
